

#include <stdio.h>

int main() {
    int n;
    float sum = 0, average;
    printf("Enter the number of elements: ");
    scanf("%d", &n);
    int numbers[n];
    printf("Enter %d numbers:\n", n);
    for (int i = 0; i < n; i++) {
        printf("Number %d: ", i + 1);
        scanf("%d", &numbers[i]);
        sum += numbers[i]; 
    }
    average = sum / n;
    printf("The average is: %.2f\n", average);

    return 0;
}

